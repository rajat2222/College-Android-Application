<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorslide_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_1_title"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:id="@+id/slide_title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/slide_1_about"
        android:textColor="@android:color/white"
        android:layout_below="@id/slide_title"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/slide_title1"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/slide_title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/college" />

    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_marginLeft="40sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40sp"
        android:fontFamily="cursive"
        android:gravity="center_horizontal"
        android:text="@string/slide_1_desc"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>