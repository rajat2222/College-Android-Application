<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".studentgridview.Busnroutes">

    <TextView
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/jnct"
        android:layout_marginStart="120dp"
        android:id="@+id/head"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bus and Stops"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:textColor="#B01"
        android:textStyle="bold"
        android:layout_below="@+id/head"
        android:textSize="35dp"
        android:textAlignment="center"
        android:id="@+id/header"
        />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/tablelay"
            android:layout_marginTop="25dp"
            android:layout_below="@id/header">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/bus" />


                <Button
                    android:id="@+id/btn2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/bustop" />

            </TableRow>

        </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tablelay"
        android:id="@+id/tablelay1">
    <TableRow>

    <TextView
        android:id="@+id/cocurri"
        android:layout_width="95dp"
        android:layout_height="25dp"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sg_btn"
        android:text="    Bus Routes" />

    <TextView
        android:id="@+id/rules"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sg_btn"
        android:text="Bus Stops"
        android:textAlignment="center" />

    </TableRow>

    </TableLayout>

</RelativeLayout>