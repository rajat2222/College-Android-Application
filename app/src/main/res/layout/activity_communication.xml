<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".Communication">


    <TextView
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/jnct"
        android:layout_marginStart="120dp"
        android:id="@+id/head"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Communicate with Faculty"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:textColor="#B01"
        android:textStyle="bold"
        android:layout_below="@+id/head"
        android:textSize="35dp"
        android:textAlignment="center"
        android:id="@+id/header"
        />
    <View
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/header"
        android:background="@android:color/black"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Enrollment No. :-"
        android:layout_below="@+id/header"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:textColorHint="#000000"
        android:textColor="@color/colorslide_5"
        android:id="@+id/txtenroll"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Faulty name"
        android:layout_below="@+id/txtenroll"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:textColorHint="#000000"
        android:textColor="@color/colorslide_5"
        android:id="@+id/teachername"
        />
    <Spinner
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/spnnr"
        android:textAlignment="center"
        android:layout_below="@id/teachername"
        android:layout_marginTop="35dp"
        />
    <Spinner
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/spnnr1"
        android:textAlignment="center"
        android:layout_below="@id/spnnr"
        android:layout_marginTop="35dp"
        />
    <Spinner
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:id="@+id/spnnr2"
        android:textAlignment="center"
        android:layout_below="@id/spnnr1"
        android:layout_marginTop="35dp"
        />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/spnnr2"
       android:id="@+id/txtmgs"
       android:hint="please describe your problem Here"
       android:textSize="17dp"
       android:textColorHint="@color/colorAccent"
       android:textColor="@color/md_blue_900"
       android:layout_centerInParent="true"
       android:layout_marginLeft="35dp"
       android:layout_marginTop="20dp"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sg_btn"
        android:layout_below="@+id/txtmgs"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:text="Send"
        android:id="@+id/btn4"/>

</RelativeLayout>