<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".Forgetpass">

    <TextView
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/jnct"
        android:layout_marginStart="120dp"
        android:id="@+id/headerr"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Forget Password"
        android:textAlignment="center"
        android:textColor="#B01"
        android:fontFamily="cursive"
        android:textSize="30dp"
        android:layout_below="@id/headerr"
        android:layout_marginTop="130dp"
        android:id="@+id/fgp"
        />
    <View
        android:layout_width="240dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/fgp"
        android:background="@android:color/black"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fgp"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColorHint="@color/colorText"
        android:hint="Enter Your Id :  "
        android:drawableLeft="@drawable/ic_info_black_24dp"
        android:id="@+id/edx"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edx"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="45dp"
        android:background="@null"
        android:text="Back"
        android:id="@+id/btn1"/>

    <View
        android:layout_width="83dp"
        android:layout_height="1dp"
        android:alpha="2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_below="@+id/btn1"
        android:background="@android:color/black"
        android:id="@+id/view1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edx"
        android:layout_alignParentRight="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="67dp"
        android:background="@null"
        android:text="Next"
        android:id="@+id/btn2"/>

    <View
        android:layout_width="83dp"
        android:layout_height="1dp"
        android:alpha="2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="67dp"
        android:layout_below="@+id/btn1"
        android:background="@android:color/black"
        android:id="@+id/view3"
        />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="90dp"
        android:textColor="@color/colorText"
        android:text="Note :- you will get a Message on your Registered Mobile Number."
        android:layout_below="@id/btn1"
        />
</RelativeLayout>