<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".studentgridview.Library">

    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/jnct"
        android:layout_centerHorizontal="true"
        android:textColor="#B01"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Library"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:textColor="#B01"
        android:textStyle="bold"
        android:layout_below="@+id/head"
        android:textSize="35dp"
        android:textAlignment="center"
        android:id="@+id/header"
        />

    <View
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/header"
        android:background="@android:color/black"
        />
    <Spinner
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:id="@+id/spn1"
        android:textAlignment="center"
        android:layout_below="@id/header"
        android:layout_marginTop="35dp"
        />

    <EditText
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_below="@id/spn1"
        android:id="@+id/txt1"
        android:layout_marginTop="35dp"
        android:layout_centerInParent="true"
        android:hint="Enter your Enrollment Number"
        android:textColorHint="@color/colornew"
        android:textColor="#B01"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go"
        android:id="@+id/btn"
        android:background="@drawable/bgbtn"
        android:layout_centerInParent="true"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"/>
</RelativeLayout>