<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".Dev">


    <TextView
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/jnct"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="cursive"
        android:text="Developers"
        android:textAlignment="center"
        android:textColor="#A80A0A"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/txtview"/>
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/txtview"
        android:background="@android:color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="Developed by :-"
        android:textAlignment="center"
        android:textColor="@color/colornew"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/txtview1"
        android:layout_below="@id/txtview"/>

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/txtview1"
        android:background="@android:color/black"
        />

    <Button
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/devlopersimage"
        android:src="@drawable/developerimage"
        android:background="@drawable/dev"
        android:layout_below="@+id/txtview1"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajat Kumar"
        android:layout_centerInParent="true"
        android:textColor="@color/colorText"
        android:id="@+id/name"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_below="@id/devlopersimage"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="Click on the Image's to know more about us."
        android:textColor="@color/colorText" />

</RelativeLayout>