<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".Student.Student">


    <TextView
        android:layout_width="121dp"
        android:layout_height="47dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/jnct"
        android:layout_marginStart="120dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="cursive"
        android:text="Welcome Parent / Student"
        android:textAlignment="center"
        android:textColor="#A80A0A"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/txtview"/>

    <View
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:alpha="2"
        android:layout_below="@+id/txtview"
        android:background="@android:color/black"
        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="56dp"
        android:fontFamily="cursive"
        android:text="User id :"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editname"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="45dp"
        android:textColorHint="@color/colorPrimary"
        android:hint="Scholar No. / Enrollment No."
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtpass"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="41dp"
        android:fontFamily="cursive"
        android:text="Password :"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editpass"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editname"
        android:layout_centerVertical="true"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textAlignment="center"
        android:textColorHint="@color/colorPrimary" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sg_btn"
        android:text="LogIn"
        android:textStyle="bold"
        android:textColor="#5D14EB"
        android:textSize="20sp"
        android:layout_below="@id/editpass"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:id="@+id/btn1"
        />
    <Button
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@drawable/bgbtn"
        android:text="@string/action_forgetpass"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_below="@id/btn1"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/btn2"
        />

